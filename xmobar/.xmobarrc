Config { font = "xft:Noto Sans CJK SC-12,FuraCode Nerd Font-12"
       , borderColor = "black"
       , border = BottomB
       , bgColor = "#28342c"
       , fgColor = "#abb2bf"
       , position = Top
       , textOffset = -1
       , iconOffset = -1
       , alpha = 230
       , lowerOnStart = False
       , hideOnStart = False
       , pickBroadest = False
       , persistent = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [
              Run DynNetwork [] 10
            , Run Cpu ["-L","3","-H","50","--normal","green","--high","red"] 10
            , Run Memory ["-t" ,"RAM: <usedratio>%"] 10
            , Run Battery [ "--template" , "Batt: <acstatus>"
              , "--Low"      , "10"        -- units: %
              , "--High"     , "80"        -- units: %
              , "--low"      , "red"
              , "--normal"   , "orange"
              , "--high"     , "green"
              , "--" -- battery specific options
                    -- discharging status
              , "-o"	, "<left>% (<timeleft>)"
                    -- AC "on" status
              , "-O"	, "<fc=#dAA520>Charging</fc>"
                    -- charged status
              , "-i"	, "<fc=#006000>Charged</fc>"
            ] 50
            , Run Date "%d %b %T" "date" 10
            , Run UnsafeStdinReader
            ]
, template = "%UnsafeStdinReader% } %cpu% | %memory% | %dynnetwork% { %battery% | %date% |"
}
